<Window x:Class="Plugin.SelectionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Title="Менеджер выбора элементов" 
             Height="500" 
             Width="420">
    <StackPanel Margin="0,0,0,15">
        <Label Content="Выбранные элементы:" Margin="10,10,0,0" Width="135" Height="25" HorizontalAlignment="Left" />

        <TextBox Text="{Binding SelectedElementsText}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto" Width="380" Height="350"/>
        
        <Button Command="{Binding AdditionalElementsCommand}" Width="80" Margin="0,10,10,0" HorizontalAlignment="Right">
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="К выбранным элементам добавить дополнительные"></TextBlock>
                </ToolTip>
            </Button.ToolTip>   
            Добавить
        </Button>
        
        <Button Command="{Binding StopSelectingCommand}" Width="200" Margin="0,10,10,0" HorizontalAlignment="Right">
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="Начать настройку копирования"/>
                </ToolTip>
            </Button.ToolTip>
            Завершить выбор элементов
        </Button>

    </StackPanel>
</Window>