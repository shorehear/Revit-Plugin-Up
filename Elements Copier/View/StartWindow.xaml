<Window x:Class="Elements_Copier.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер выбора элементов" 
        Height="225" 
        Width="300">
    
    <StackPanel Height="200">

        <RadioButton Content="Выбрать объекты кликом по каждому" GroupName="Options" Margin="10,10,0,0" Command="{Binding GetSingleSelectionCommand}"/>
        <RadioButton Content="Выбрать область с объектами" GroupName="Options" Margin="10,0,0,0" Command ="{Binding GetGroupSelectionCommand}"/>

        <CheckBox Content="Выбрать направляющую линию модели" Margin="10,10,0,0" IsChecked="{Binding IncludeLineSelection, Mode=TwoWay}" />

        <Label Content="Сюда добавить справку пользования" Margin="40,10,0,0"/>

        <Button Content="Приступить к выбору элементов" Margin="40,50,40,0" Command="{Binding GetSelectionCommand}" />
    </StackPanel>
</Window>