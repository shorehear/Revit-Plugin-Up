<Window x:Class="Elements_Copier.SelectionElementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер выбора элементов" 
        Height="430" 
        Width="500">

    <StackPanel Width="450" Margin="25,0,25,0">

        <Button Content="Начать выбор элементов" Width="200" Height="20" Command="{Binding StartSelectionCommand}" 
                VerticalContentAlignment="Stretch" Margin="0,15,0,5"/>
        
        <Label Content="Выбранные элементы:" Margin="0,0,0,0" Width="135" Height="25" HorizontalAlignment="Left" />

        <TextBox Text="{Binding SelectedElementsText}" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto" Width="400" Height="290" HorizontalAlignment="Center"/>

        <Button Content="Необходимые элементы выбраны" Width="200" Height="20" Command="{Binding EndSelectionCommand}" 
                VerticalContentAlignment="Stretch" Margin="0,15,0,5"/>

    </StackPanel>
</Window>